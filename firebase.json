{
  "hosting": {
    "public": ".",       //  ðŸ‘ˆ  CRITICAL:  "." means current directory
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [         //  ðŸ‘ˆ  Only if you use React Router
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
